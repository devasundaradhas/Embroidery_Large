        NoCalc_Status = True

        NewCode = Trim(Val(lbl_Company.Tag)) & "-" & Trim(no) & "/" & Trim(Common_Procedures.FnYearCode)

        Try

            da1 = New SqlClient.SqlDataAdapter("select a.* from Ledger_Item_Head a Where a.Company_IdNo = " & Str(Val(lbl_Company.Tag)) & " and a.Ledger_Item_Code = '" & Trim(NewCode) & "'", con)
